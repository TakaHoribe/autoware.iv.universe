<?xml version="1.0" encoding="UTF-8" ?>
<launch>
  <arg name="city_config_path" default="" />
  <arg name="lanelet_map_path" default="$(arg city_config_path)/kashiwanoha.osm" />
  <arg name="pointcloud_map_path" default="$(arg city_config_path)/kashiwanoha.pcd" />
  <arg name="map_tf_path" default="$(arg city_config_path)/kashiwanoha.launch" />
  <arg name="num_lookup_lanelet_for_drivealble_area" default="4" />


  <include file="$(find autoware_launch)/launch/planning_simulator.launch">
    <arg name="lanelet_map_path" value="$(arg lanelet_map_path )" />
    <arg name="pointcloud_map_path" value="$(arg pointcloud_map_path)" />
    <arg name="map_tf_path" value="$(arg map_tf_path)" />
    <arg name="num_lookup_lanelet_for_drivealble_area" value="$(arg num_lookup_lanelet_for_drivealble_area)" />
  </include>

  <!-- traffic light classifier -->
  <include file="$(find perception_launch)/launch/traffic_light/traffic_light.launch" />
  <node pkg="topic_tools" type="relay" name="scenario_trajectory_relay" args="/traffic_light_states /perception/traffic_light/traffic_light_states" />

  <!-- scenario maker -->
  <include file="$(find scenario_maker)/launch/scenario_maker.launch" />
</launch>