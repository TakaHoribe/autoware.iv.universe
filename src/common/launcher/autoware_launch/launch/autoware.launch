<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Map path -->
  <arg name="map_path" default=""/>
  <!-- Rosbag -->
  <arg name="rosbag" default="false" />
  <param name="/use_sim_time" value="$(arg rosbag)" />

  <!-- Vehicle Setting -->
  <include file="$(find vehicle_description)/launch/vehicle_description.launch" />

  <!-- State Monitor -->
  <include file="$(find autoware_state_monitor)/launch/autoware_state_monitor.launch">
    <arg name="input_autoware_engage" value="/autoware/engage" />
    <arg name="input_vehicle_engage" value="/vehicle/engage" />
    <arg name="input_route" value="/planning/mission_planning/route" />
    <arg name="input_twist" value="/vehicle/status/twist" />

    <arg name="output_autoware_state" value="/autoware/state" />
    <arg name="output_autoware_engage" value="/autoware/engage" />

    <arg name="config_file" value="$(find autoware_state_monitor)/config/autoware_state_monitor.yaml" />
  </include>

  <!-- Map -->
  <include file="$(find map_launch)/launch/map.launch">
    <arg name="map_path" value="$(arg map_path)"/>
  </include>

  <!-- Sensing -->
  <include file="$(find sensing_launch)/launch/sensing.launch">
    <arg name="launch_driver" value="true" unless="$(arg rosbag)"/>
    <arg name="launch_driver" value="false" if="$(arg rosbag)"/>
  </include>

  <!-- Localization -->
  <include file="$(find localization_launch)/launch/localization.launch">
  </include>

  <!-- Perception -->
  <include file="$(find perception_launch)/launch/perception.launch">
    <arg name="mode" default="lidar"/>
    <!-- "camera_lidar_fusion", "lidar" or "camera" -->
  </include>

  <!-- Planning -->
  <include file="$(find planning_launch)/launch/planning.launch" />

  <!-- Control -->
  <include file="$(find control_launch)/launch/control.launch">
  </include>

  <!-- Rviz -->
  <node pkg="rviz" type="rviz" name="rviz" output="screen" args="-d $(find autoware_launch)/rviz/autoware.rviz" />

  <!-- Web Controller -->
  <include file="$(find roswww)/launch/roswww.launch">
    <arg name="cached" default="false"/>
  </include>
  <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch" />

</launch>
